                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section><!-- End Services Section -->
    <!-- ======= إعلانات مميزة ======= -->
    <section class="section-testimonials section-t8 nav-arrow-a">
        <div class="container" style="margin-bottom:50px;">
            <div class="row">
                <div class="col-md-12">
                    <div class="title-wrap d-flex justify-content-between">
                        <div class="title-box">
                            <h2 class="title-a">
                                إعلانات مميزة
                            </h2>
                            <div>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star"></span>
                                <span class="fa fa-star"></span>
                            </div>
                        </div>

                        <div class="title-link">
                            <a asp-controller="Advertisings" asp-action="index">
                                <span class="bi bi-chevron-right"></span>
                                كل الإعلانات
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div id="testimonial-carousel" class="swiper ">
                <div class="swiper-wrapper">
                    @foreach (var ad in Model.Advertisings)
                    {
                        <div class="carousel-item-a swiper-slide">
                            <div class="testimonials-box">
                                <div class="row">
                                    <div class="col-sm-12 col-md-6">
                                        <div class="testimonial-img">
                                            <img src="~/Uploads/Advertisings/@ad.ImageURL" class="img-fluid  img-thumbnail" style="height:450px;" />
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6">

                                        <div class="testimonial-author-box">
                                            @{

                                                if (@Model.Image != null && @Model.Image.Any())
                                                {
                                                        <img id="Image" alt="profile" class="testimonial-avatar" src="data:image/*;base64,@(Convert.ToBase64String(@Model.Image))" />
                                                }
                                                else
                                                {
                                                        <img src="~/assets/img/gender_neutral_user_120px.png" class="testimonial-avatar" />
                                                }
                                            }


                                            <h2 class="testimonial-author">@ad.User.UserName </h2>

                                        </div>

                                        @* <div class="testimonial-ico">
                                    <i class="bi bi-chat-quote-fill"></i>
                                    </div>*@
                                        @*<div class="testimonials-content">*@
                                        <h2>
                                            @ad.Title  <div style="display:inline-block; font-size:12px;">
                                                <span class="fa fa-star checked"></span>
                                                <span class="fa fa-star checked"></span>
                                                <span class="fa fa-star checked"></span>
                                                <span class="fa fa-star"></span>
                                                <span class="fa fa-star"></span>
                                            </div>
                                        </h2>
                                        <p style="font-size:9px; margin-top:10px;"> @ad.PublishDate</p>


                                        <p class="testimonial-text">
                                            @ad.Description
                                        </p>
                                    </div>

                                </div>
                            </div>
                        </div>



                    }
                    <!-- End carousel item -->
                </div>
            </div>
            <div class="testimonial-carousel-pagination carousel-pagination"></div>

        </div>
    </section><!-- نهاية إعلانات مميزة -->
    <!-- ======= Latest Properties Section ======= -->
    @if (!Model.Properties.Any())
    {
        <div class="alert alert-danger" role="alert" style="margin-top:75px;">  لا يوجد عقارات متاحة </div>
    }
    else
    {
        <section class="section-property section-t8">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="title-wrap d-flex justify-content-between">
                            <div class="title-box">
                                <h2 class="title-a">العقارات الحديثة</h2>
                            </div>
                            <div class="title-link">
                                <a asp-controller="Properties" asp-action="index">
                                    <span class="bi bi-chevron-right"></span>
                                    كل العقارات

                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="property-carousel" class="swiper">
                    <div class="swiper-wrapper">
                        @foreach (var property in Model.Properties)
                        {
                            <div class="carousel-item-b swiper-slide">
                                <div class="card-box-a card-shadow">

                                    <div class="card-box-a card-shadow">
                                        <div class="img-box-a">
                                            @{
                                                var image = "";

                                                if (property.propertyImages != null && property.propertyImages.Any())
                                                {
                                                    image = $"/Uploads/Properties/{property.propertyImages[0].imageUrl}";
                                                }
                                                else
                                                {
                                                    image = "https://media.istockphoto.com/vectors/no-image-available-sign-vector-id922962354?k=20&m=922962354&s=612x612&w=0&h=f-9tPXlFXtz9vg_-WonCXKCdBuPUevOBkp3DQ-i0xqo=";
                                                }
                                            }
                                            <img src="@image" class="img-a img-fluid" />
                                        </div>
                                        <div class="card-overlay">
                                            <div class="card-overlay-a-content">
                                                <div class="card-header-a">
                                                    <h2 class="card-title-a">
                                                        <a asp-controller="Properties" asp-route-id="@property.Id" asp-action="SingleProperty">
                                                            @property.Name
                                                        </a>
                                                    </h2>
                                                    <p style="color:white;">  @property.Description</p>
                                                </div>
                                                <div class="card-body-a">
                                                    <div class="price-box d-flex">
                                                        <span class="price-a">@property.OperationType.Name| $ @property.Price </span>
                                                    </div>
                                                    <a asp-controller="Properties" asp-route-id="@property.Id" asp-action="SingleProperty" class="link-a">

                                                        لمعرفة المزيد إضغط هنا
                                                        <span class="bi bi-chevron-left"></span>
                                                    </a>
                                                </div>
                                                <div class="card-footer-a">
                                                    <ul class="card-info d-flex justify-content-around">
                                                        <li>

                                                            <h4 class="card-info-title" style="color:white;">المساحة</h4>
                                                            <span dir="ltr">
                                                                @property.Space m
                                                                <sup>2</sup>
                                                            </span>
                                                        </li>
                                                        <li>
                                                            <h4 class="card-info-title" style="color:white;">الحالة</h4>
                                                            <span>@*@(property.Land!=null?property.Land.Width:0)*@ @property.PropertyStatus.Name</span>
                                                        </li>
                                                        <li>
                                                            <h4 class="card-info-title" style="color:white;">عدد الغرف</h4>
                                                            <span>@(property.Home!=null?property.Home.RoomCount:0) </span>
                                                        </li>
                                                        <li>
                                                            <h4 class="card-info-title" style="color:white;">الصور</h4>
                                                            <span>@property.propertyImages.Count() </span>
                                                        </li>

                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>

                                <!-- End carousel item -->



                            </div>
                        }
                    </div>


                    <div class="propery-carousel-pagination carousel-pagination"></div>

                </div>
        </section>

        <!-- End Latest Properties Section -->
    }
    <!-- ======= Agents Section ======= -->
    <section class="section-agents section-t8">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="title-wrap d-flex justify-content-between">
                        <div class="title-box">
                            <h2 class="title-a">أفضل العملاء</h2>
                        </div>
                        <div class="title-link">
                            <a href="agents-grid.html">
                                <span class="bi bi-chevron-right"></span>
                                كل العملاء

                            </a>
                        </div>
                    </div>
                </div>
            </div>


            <div id="property-carousel" class="swiper">
                <div class="swiper-wrapper">
                    @foreach (var user in Model.Users)
                    {
                        <div class="carousel-item-b swiper-slide" onclick="goTo(`@Url.Action("ShowUser","UserProfile")?id=@user.Id`)">

                            <div class="card-box-d card-shadow">
                                <div class="img-box-d">
                                    @* <img src="~/assets/img/agent-4.jpg" alt="" class="img-d img-fluid">*@
                                    @{

                                        if (user.Image != null && user.Image.Any())
                                        {
                                                
                                                    <img id="Image" alt="profile" class="img-d img-fluid" src="data:image/*;base64,@(Convert.ToBase64String(user.Image))" />
                                                
                                        }
                                        else
                                        {
                                                <img id="Image" alt="profile" class="img-d img-fluid" src="~/assets/img/image not found.png" />

                                        }
                                    }
                                </div>
                               
                                    <div class="card-overlay card-overlay-hover" style="padding:50px;">
                                        <div class="card-header-d">
                                            <div class="card-title-d align-self-center">
                                                <h3 class="title-d">
                                                    <a asp-controller="UserProfile" asp-action="Index" asp-route-id="@user.Id" style="z-index:1000;cursor:pointer;">
                                                        الاسم:
                                                        @user.FirstName @user.LastName

                                                    </a>
                                                </h3>
                                            </div>
                                        </div>
                                        <div class="card-body-d">
                                            <p class="content-d color-text-a">

                                                @user.Description
                                            </p>

                                            <div class="info-agents color-a">
                                                <h5>للتواصل:</h5>
                                                <p>
                                                    <strong>هاتف: </strong> @user.PhoneNumber
                                                </p>
                                                <p>
                                                    <strong>إيميل: </strong> @user.Email
                                                </p>
                                            </div>
                                        </div>
                                        <div class="card-footer-d" dir="ltr">
                                            <div class="socials-footer d-flex justify-content-center">
                                                <ul class="list-inline">
                                                    <li class="list-inline-item">
                                                        <a href="#" class="link-one">
                                                            <i class="bi bi-facebook" aria-hidden="true"></i>
                                                        </a>
                                                    </li>
                                                    <li class="list-inline-item">
                                                        <a href="#" class="link-one">
                                                            <i class="bi bi-twitter" aria-hidden="true"></i>
                                                        </a>
                                                    </li>
                                                    <li class="list-inline-item">
                                                        <a href="#" class="link-one">
                                                            <i class="bi bi-instagram" aria-hidden="true"></i>
                                                        </a>
                                                    </li>
                                                    <li class="list-inline-item">
                                                        <a href="#" class="link-one">
                                                            <i class="bi bi-linkedin" aria-hidden="true"></i>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                              

                            </div>
                        </div>
                    }
                </div>
                <div class="propery-carousel-pagination carousel-pagination"></div>
            </div>


        </div>
    </section>

    <!-- End Agents Section -->



</main><!-- End #main -->


<script>
    function goTo(url) {
        window.location.href = url;
    }
</script>