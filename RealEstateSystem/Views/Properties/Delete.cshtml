@model RealEstateSystem.Models.Property

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container" style="margin-top:150px;" dir="rtl">
    <h1> حذف العقار </h1>

    <h3>هل تريد حذف العقار بالتأكيد؟</h3>
    <div>
        <h4>@Model.Name</h4>
        <hr />
        <dl class="row">
            <div class="col-md-4">
                <dt class="col-md-4">
                    اسم العقار:
                </dt>
                <dd class="col-md-4">
                    @Html.DisplayFor(model => model.Name)
                    <hr />
                </dd>

                <dt class="col-md-4">
                    سعر العقار:
                </dt>
                <dd class="col-md-4">
                    @Html.DisplayFor(model => model.Price)
                    <hr />
                </dd>
                <dt class="col-md-4">
                    مساحة العقار:
                </dt>
                <dd class="col-md-4">
                    @Html.DisplayFor(model => model.Space)
                    <hr />
                </dd>
                <dt class="col-md-4">
                    وصف العقار:
                </dt>
                <dd class="col-md-4">
                    @Html.DisplayFor(model => model.Description)
                    <hr />
                </dd>
                <dt class="col-md-4">
                    الحي:
                </dt>
                <dd class="col-md-4">
                    @Html.DisplayFor(model => model.District.Name)
                    <hr />
                </dd>
                <dt class="col-md-4">
                    نوع العقار:
                </dt>
                <dd class="col-md-4">
                    @Html.DisplayFor(model => model.PopertType.Name)
                    <hr />
                </dd>
                <dt class="col-md-4">
                    حالة العقار:
                </dt>
                <dd class="col-md-4">
                    @Html.DisplayFor(model => model.PropertyStatus.Name)
                    <hr />
                </dd>
                <dt class="col-md-4">
                    نوع العقد:
                </dt>
                <dd class="col-md-4">
                    @Html.DisplayFor(model => model.OperationType.Name)
                    <hr />
                </dd>

                <dt class="col-sm-2 mt-4">
                    الصور:
                </dt>
                <dd class="col-sm-10  mt-4">
                    <div>
                        @foreach (var img in Model.propertyImages)
                        {
                            <img src="/Uploads/Properties/@img.imageUrl" width="70" height="70" class="img-thumbnail">

                        }
                    </div>
                </dd>
            </div>

            <div class="col-md-4">
                <dt class="col-md-4">
                    هل الأرض مشجرة؟
                </dt>
                <dd class="col-md-4">
                    @Html.DisplayFor(model => model.Land.IsTimberLand)
                    <hr />
                </dd>
                <dt class="col-md-4">
                    الطول:
                </dt>
                <dd class="col-md-4">
                    @Html.DisplayFor(model => model.Land.Length)
                    <hr />
                </dd>
                <dt class="col-md-4">
                    العرض:
                </dt>
                <dd class="col-md-4">
                    @Html.DisplayFor(model => model.Land.Width)
                    <hr />
                </dd>
                <dt class="col-md-4">
                    هل يوجد بثر مياه؟
                </dt>
                <dd class="col-md-4">
                    @Html.DisplayFor(model => model.Land.WaterWell)
                    <hr />
                </dd>
                <dt class="col-md-4">
                    هل يوجد بالقرب بئر مياه؟
                </dt>
                <dd class="col-md-4">
                    @Html.DisplayFor(model => model.Land.WaterWellAtNear)
                    <hr />
                </dd>
                <dt class="col-md-4">
                    هل الأرض صالحة للبناء؟
                </dt>
                <dd class="col-md-4">
                    @Html.DisplayFor(model => model.Land.LandForConstruction)
                    <hr />
                </dd>
                <dt class="col-md-4">
                    هل الأرض صالحة للزراعة؟
                </dt>
                <dd class="col-md-4">
                    @Html.DisplayFor(model => model.Land.LandIsArable)
                    <hr />
                </dd>
                <dt class="col-md-4">
                    نوع التربة؟
                </dt>
                <dd class="col-md-4">
                    @Html.DisplayFor(model => model.Land.EarthType.id)
                    <hr />
                </dd>
                @* <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Land.Property)
                </dt>
                <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Land.Property.Name)
                </dd>*@

            </div>



            <div class="col-md-4">
                <dt class="col-md-4">
                    عدد الغرف:
                </dt>
                <dd class="col-md-4">
                    @Html.DisplayFor(model => model.Home.RoomCount)
                    <hr />
                </dd>
                <dt class="col-md-4">
                    الطابق:
                </dt>
                <dd class="col-md-4">
                    @Html.DisplayFor(model => model.Home.Floor)
                    <hr />
                </dd>
                <dt class="col-md-4">
                    هل مشمس؟
                </dt>
                <dd class="col-md-4">
                    @Html.DisplayFor(model => model.Home.IsSunny)
                    <hr />
                </dd>
                <dd class="col-md-4">
                    @Html.DisplayFor(model => model.Home.PropertyId)
                </dd>
            </div>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="حذف" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-info">الذهاب إلى قائمة العقارات </a>
        </form>
    </div>

</div>
