@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
 <form id="profile-form" method="post" enctype="multipart/form-data">
<div class="row">
    < class="col-md-6">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                 <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control"  />
               
            </div>
              <div class="form-floating">
                   <label asp-for="Input.FirstName" class="form-label"></label>
                <input asp-for="Input.FirstName" class="form-control"  />
               
            </div>
              <div class="form-floating">
                <label asp-for="Input.LastName" class="form-label"></label>

                <input asp-for="Input.LastName" class="form-control"  />
            </div>
              <div class="form-floating">
                    <label asp-for="Input.UserType1" class="form-label"></label>
                <select asp-for="Input.UserType1" class="form-control" >
                    <option>visitor</option>
                    <option>user</option>
                    <option>admin</option>
                </select>
            </div>

              <div class="form-floating">
                   <label asp-for="Input.Country" class="form-label"></label>
                <input asp-for="Input.Country" class="form-control"  />
            </div>

            
              <div class="form-floating">
                    <label asp-for="Input.City" class="form-label"></label>
                <input asp-for="Input.City" class="form-control"  />
            </div>

              <div class="form-floating">
                    <label asp-for="Input.Active" class="form-label"></label>
                <input asp-for="Input.Active" class="form-control"  />  
            </div>

              <div class="form-floating">
                    <label asp-for="Input.Birthday" class="form-label"></label>
                <input asp-for="Input.Birthday" class="form-control"  />
              </div>
            
              <div class="form-floating">
                      <label asp-for="Input.Description" class="form-label"></label>
                <textarea asp-for="Input.Description" class="form-control" ></textarea>
            </div>

              <div class="form-floating">
                   <label asp-for="Input.Gender" class="form-label"></label>
                <select asp-for="Input.Gender" class="form-control" >
                    <option>Male</option>
                    <option>Female</option>
                </select>
               
            </div>
              <div class="form-floating">
                 <label asp-for="Input.RegisterDate" class="form-label"></label>
                <input asp-for="Input.RegisterDate" class="form-control" disabled />
            </div>

            <div class="form-floating">
                  <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
      
     </div>
       <div class="col-md-6">
            <div class="form-group" >
                <label asp-for="Input.Image" class="w-100"></label>
                    @if(Model.Input.Image != null)
                    {
                        <img id="image" alt="profile" src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.Image))"/>
                    }
                    else
                    {
                        <img id="image" alt="profile" class="profile-image" src="~/images/gender_neutral_user_120px.png"/>
                    }
                    <div class="custom-file mt-2">
                        <input  type="file"
                                accept="image/*"
                                asp-for="Input.Image" 
                                class="custom-file-input"
                                onchange="document.getElementById('image').src=window.URL.createObjectURL(this.files[0])"/>
                        <label class="custom-file-lablel" asp-for="Input.Image">Choose Picture ... </label>
                        <span asp-validation-for="Input.Image" class="text-danger"></span>
                    </div>
                </div>
        </div>
      </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
