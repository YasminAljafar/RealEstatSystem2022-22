@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<div class="container">
    <h4>@ViewData["Title"]</h4>
    <partial name="_StatusMessage" model="Model.StatusMessage" />
    <form id="profile-form mt-4" method="post">
        <div class="row">
            <div class="col-md-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="form-control" disabled />
                </div>
                <div class="form-group mt-4">
                    <label asp-for="Input.FirstName"></label>
                    <input asp-for="Input.FirstName" class="form-control" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <label asp-for="Input.LastName"></label>
                    <input asp-for="Input.LastName" class="form-control" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <label asp-for="Input.Description"></label>
                    <input asp-for="Input.Description" class="form-control" />
                    <span asp-validation-for="Input.Description" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <label asp-for="Input.UserType"></label>
                    <select asp-for="Input.UserType" disabled class="form-control" asp-items="@(new SelectList(Model.userTypes,"Id","Name"))">
                    </select>
                    <span asp-validation-for="Input.UserType" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <label asp-for="Input.Country"></label>
                    <input asp-for="Input.Country" class="form-control" />
                    <span asp-validation-for="Input.Country" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <label asp-for="Input.City"></label>
                    <input asp-for="Input.City" class="form-control" />
                    <span asp-validation-for="Input.City" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="Input.Gender"></label>
                    <select asp-for="Input.Gender" class="form-control">
                        <option selected disabled> Select Your Gender</option>
                        <option value="false">Male</option>
                        <option value="true">Female</option>
                    </select>
                    <span asp-validation-for="Input.Gender" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <label asp-for="Input.PhoneNumber"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
            </div>


            <div class="col-md-6">
                <div class="form-group">
@*                    <label asp-for="Input.Image" class="w-100"></label>
*@                    @if (Model.Input.Image != null)
                    {
                        <img id="Image" alt="profile" src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.Image))" />
                    }
                    else
                    {
                        <img id="Image" alt="profile" class="profile-image" src="~/assets/img/gender_neutral_user_120px.png" style="width:200px; " class="img-thumbnail" />
                    }
                    <div class="custom-file mt-2">
                        <input type="file"
                               accept="image/*"
                               asp-for="Input.Image"
                               class="custom-file-input"
                               onchange="document.getElementById('Image').src=window.URL.createObjectURL(this.files[0])"/>
                        <label class="custom-file-lablel" asp-for="Input.Image">Choose Picture ... </label>
                        <span asp-validation-for="Input.Image" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}